<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<title>{% block title %} Silex Technical test{% endblock %}</title>
		{%block stylesheets %}
			<link rel="stylesheet" href="{{ app.request.basepath }}/public/css/bootstrap.min.css" type="text/css" >
			<link rel="stylesheet" href="{{ app.request.basepath }}/public/css/layout.css" type="text/css" >
		{% endblock %}
	</head>
	
	<body>
		<div class="container content">
			<a class="offset10 btn btn-info" data-toggle="modal" href="#addnews">Add one news</a>
			{% block body %}
			{% endblock %}
		</div>
		
		
		<!-- popup to add new article -->
		<div class="modal hide" id="addnews">
			<div class="modal-header">
				<a class="close" data-dismiss="modal">x</a>
				<h2>Add a news</h2>
			</div>
			<div class="modal-body">
				<form action="{{ app.request.basepath }}/index.php/addnews" method="post">
					<label for="title">title : </label><input type="text" name="title" id="title"/>
					<label for="short_desc">short description : </label><input type="text" name="short_desc" id="short_desc"/>
					<label for="news_content">news : </label><textarea name="news_content" id="news_content"></textarea>
					<br/><input type="submit" value="add this news"/>
				</form>
			</div>
		</div>
		
		{% block javascripts %}
			<script src="{{ app.request.basepath }}/public/js/jquery.min.js" type="text/javascript"></script>
			<script src="{{ app.request.basepath }}/public/js/bootstrap.min.js" type="text/javascript"></script>
		{% endblock %}
	</body>
</html>
